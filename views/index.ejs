<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Log In</title>
    <link rel="stylesheet" href="/styles/index.css">
  </head>
<body>
  <% if (locals.user) {%>
    <%- include('partials/header', {user: user}) %>
    <div class="all-messages-cont">
      <div class="all-messages">
        <div class="add-messages">
          <h1>All messages</h1>
          <a href="/add">Add</a>
        </div>
        <%- include('messages', {messages: messages, user: user}) %>
      </div>
    </div>
  <% } else { %>
    <%- include('login') %>
  <%}%>
</body>
</html>